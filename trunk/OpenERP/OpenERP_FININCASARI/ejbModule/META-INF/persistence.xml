<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence"
     xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
	<persistence-unit name="OpenERP_FININCASARI" transaction-type="JTA">
	
	<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<jta-data-source>java:/ORCLOpenERP</jta-data-source>
		<!-- <jta-data-source>java:/PGLocalDS</jta-data-source> -->
		
		<jar-file>OpenERP_PERSONAL.jar</jar-file>
		<jar-file>OpenERP_VANZARI.jar</jar-file>
		<jar-file>OpenERP_NOMGEN.jar</jar-file>
		
		<class>org.open.erp.services.finincasari.BiletOrdine</class>
		<class>org.open.erp.services.finincasari.CEC</class>
		<class>org.open.erp.services.finincasari.Chitanta</class>
		<class>org.open.erp.services.finincasari.ExtrasDeCont</class>
		<class>org.open.erp.services.finincasari.FinanciarIncasari</class>
		<class>org.open.erp.services.finincasari.OrdinDePlata</class>
		<class>org.open.erp.services.finincasari.TipIncasare</class>
		<class>org.open.erp.services.vanzari.Facturi</class>
		<class>org.open.erp.services.personal.Angajat</class>
		<class>org.open.erp.services.nomgen.Persoana</class>
		
	<properties>
		<property name="hibernate.dialect" value="org.hibernate.dialect.Oracle10gDialect"/>
		<property name="hibernate.hbm2ddl.auto" value="update"/>
	</properties>
	
	</persistence-unit>
</persistence>
