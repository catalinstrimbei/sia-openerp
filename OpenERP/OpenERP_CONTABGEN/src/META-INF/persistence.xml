<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0"
	xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
	<persistence-unit name="OpenERP_CONTABGEN"
		transaction-type="JTA">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<jta-data-source>java:/ORCLOpenERP</jta-data-source>
		<jar-file>OpenERP_NOMGEN.jar</jar-file>
		<jar-file>OpenERP_ACHIZITII.jar</jar-file>
		<class>org.open.erp.services.nomgen.Document</class>
		<class>org.open.erp.services.achizitii.Factura</class>		
		<class>org.open.erp.services.contabgen.tranzactii.Tranzactie</class>
		<class>org.open.erp.services.contabgen.tranzactii.OperatiuneContabila</class>
		<class>org.open.erp.services.contabgen.tranzactii.InregistrareOperatiuneContabila</class>
		<class>org.open.erp.services.contabgen.tranzactii.InregistrareOperatiune</class>
		<class>org.open.erp.services.contabgen.sabloane.Sablon</class>
		<class>org.open.erp.services.contabgen.rapoarte.Raport</class>
		<class>org.open.erp.services.contabgen.rapoarte.BilantContabil</class>
		<class>org.open.erp.services.contabgen.conturi.PlanConturi</class>
		<class>org.open.erp.services.contabgen.conturi.ContVenituri</class>
		<class>org.open.erp.services.contabgen.conturi.ContPasiv</class>
		<class>org.open.erp.services.contabgen.conturi.ContCheltuieli</class>
		<class>org.open.erp.services.contabgen.conturi.ContActiv</class>
		<class>org.open.erp.services.contabgen.conturi.Cont</class>
		<class>org.open.erp.services.contabgen.conturi.Clasa</class>
		<properties>
			<property name="hibernate.dialect" value="org.hibernate.dialect.Oracle10gDialect" />
			<property name="hibernate.hbm2ddl.auto" value="update" />
		</properties>
	</persistence-unit>
</persistence>