<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j='http://jakarta.apache.org/log4j/'>

	<appender name="CA" class="org.apache.log4j.ConsoleAppender">
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%-4r [%t] %-5p %c %x - %m%n" />
		</layout>
	</appender>
	
	 <appender name="DE" class="org.apache.log4j.FileAppender">
       <param name="File" value="d:/DEBUG.log"/>
        <param name="Threshold" value="DEBUG"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%-4r [%t] %-5p %c %x - %m%n" />
        </layout>
    </appender>
	
	
	 <appender name="IN" class="org.apache.log4j.FileAppender">
       <param name="File" value="d:/INFO.log"/>
        <param name="Threshold" value="INFO"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%-4r [%t] %-5p %c %x - %m%n" />
        </layout>
    </appender>
	
    <appender name="ER" class="org.apache.log4j.FileAppender">
       <param name="File" value="d:/ERRORS.log"/>
        <param name="Threshold" value="ERROR"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%-4r [%t] %-5p %c %x - %m%n" />
        </layout>
    </appender>
    
    <appender name="WA" class="org.apache.log4j.FileAppender">
       <param name="File" value="d:/WARNS.log"/>
        <param name="Threshold" value="WARN"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%-4r [%t] %-5p %c %x - %m%n" />
        </layout>
    </appender>
    
     <appender name="FA" class="org.apache.log4j.FileAppender">
       <param name="File" value="d:/FATAL.log"/>
        <param name="Threshold" value="FATAL"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%-4r [%t] %-5p %c %x - %m%n" />
        </layout>
    </appender>
   
    
    
    <logger name="com.FATAL">
  		    <level value="WARN" />
 		   <appender-ref ref="FA"/>
 	 </logger>
     <logger name="com.WARN">
  		    <level value="WARN" />
 		   <appender-ref ref="WA"/>
 	 </logger>
    
     <logger name="com.ERROR">
  		    <level value="ERROR" />
 		   <appender-ref ref="ER"/>
 	 </logger>
 	 <logger name="com.INFO">
  		    <level value="INFO" />
 		   <appender-ref ref="IN"/>
 	 </logger>
 	 
   
	<root>
		<level value="debug" />
		<appender-ref ref="CA" />
		<appender-ref ref="DE" />
	</root>
</log4j:configuration>