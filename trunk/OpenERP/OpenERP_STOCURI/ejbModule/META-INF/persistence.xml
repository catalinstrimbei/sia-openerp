<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
	<persistence-unit name="OpenERP_STOCURI">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<jta-data-source>java:jdbc/LocalPG_XA</jta-data-source>	
		<jar-file>OpenERP_NOMGEN</jar-file>
		<jar-file>OpenERP_PERSONAL</jar-file>
		<class>org.open.erp.services.stocuri.ArticolStoc</class>	
		<class>org.open.erp.services.stocuri.BonConsum</class>	
		<class>org.open.erp.services.stocuri.BonTransfer</class>	
		<class>org.open.erp.services.stocuri.CerereAprovizionare</class>	
		<class>org.open.erp.services.stocuri.Depozit</class>	
		<class>org.open.erp.services.stocuri.Gestionar</class>	
		<class>org.open.erp.services.stocuri.Gestiune</class>	
		<class>org.open.erp.services.stocuri.LoturiIntrari</class>
		<class>org.open.erp.services.stocuri.PrioritateMaterialeProductie</class>	
		<class>org.open.erp.services.nomgen.Document</class>	
		<class>org.open.erp.services.nomgen.LinieDocument</class>	
		<class>org.open.erp.services.nomgen.Material</class>	
		<class>org.open.erp.services.nomgen.MateriePrima</class>	
		<class>org.open.erp.services.nomgen.Produs</class>
		<properties>
	         <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/> 
	         <!-- <property name="hibernate.dialect" value="org.hibernate.dialect.Oracle10gDialect"/>-->
	        <property name="hibernate.hbm2ddl.auto" value="create-drop"/>
	    </properties>		
	</persistence-unit>
</persistence>
