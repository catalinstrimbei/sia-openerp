<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
	<persistence-unit name="OpenERP_ACHIZITII">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<jta-data-source>java:jdbc/LocalORCL_XA</jta-data-source>
		<jar-file>OpenERP_NOMGEN.jar</jar-file>		
		<class>org.open.erp.services.achizitii.LinieCerereOferta</class>
		 
		<class>org.open.erp.services.achizitii.LinieNIR</class>
		<class>org.open.erp.services.achizitii.LinieOfertaAchizitie</class>
		<class>org.open.erp.services.achizitii.LiniePlanAprovizionare</class>
		<class>org.open.erp.services.achizitii.NIR</class>
		<class>org.open.erp.services.achizitii.OfertaAchizitie</class>
		<class>org.open.erp.services.achizitii.PlanAprovizionare</class>
		<class>org.open.erp.services.achizitii.Categorie</class>
		<class>org.open.erp.services.achizitii.Articol</class>
		<class>org.open.erp.services.achizitii.Factura</class>
		<class>org.open.erp.services.achizitii.Furnizor</class>
		<class>org.open.erp.services.achizitii.Comanda</class>
		<class>org.open.erp.services.achizitii.CerereOferta</class>
		<class>org.open.erp.services.achizitii.LinieComanda</class>
		<exclude-unlisted-classes>false</exclude-unlisted-classes>		
	    <properties>
	        <!-- <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>  -->
	        <property name="hibernate.dialect" value="org.hibernate.dialect.Oracle10gDialect"/>
	        <property name="hibernate.hbm2ddl.auto" value="create-drop"/>
	    </properties>		
	</persistence-unit>	
</persistence>
