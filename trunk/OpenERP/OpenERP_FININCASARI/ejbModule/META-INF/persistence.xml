<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0"
	xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
	<persistence-unit name="OpenERP_FININCASARI">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<jta-data-source>java:jdbc/LocalPG_TX</jta-data-source>
		<class>org.open.erp.services.incasari.BiletLaOrdin</class>
		<class>org.open.erp.services.incasari.Cec</class>
		<class>org.open.erp.services.incasari.Chitanta</class>
		<class>org.open.erp.services.incasari.ExtrasCont</class>
		<class>org.open.erp.services.incasari.Incasare</class>

		<properties>
			<property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect" />
			<!--<property name="hibernate.dialect" value="org.hibernate.dialect.Oracle10gDialect" 
				/> -->
			<property name="hibernate.hbm2ddl.auto" value="create-drop" />
		</properties>
	</persistence-unit>
</persistence>
